
<div class="main-page">
<p id="notice"><%= notice %></p>

<div style="text-align: center;">
  <h1>PRPRO</h1>
</div>

<table class="table table-striped table-dark table-hover">
  <thead>
    <tr>
      <th style="text-align: left;" >Title</th>
      <th style="text-align: left;">Description</th>
      <th style="text-align: left; font-size: 30px;">One &nbsp;Two</th>
      
      <th colspan="3"></th>
    </tr>
  </thead>
  <div class="graph">
  <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcSnl1KjSGX3rs06FF--ON9yQFn4soLuXZFQQsSEb-srtg&usqp=CAU&ec=48600113",class="picture" >
  </div>
  <tbody>
    <% @projects.each do |project| %>
      <tr>
       
        <td style:"font-size:21px !important;"><%= project.title%></td>
        <td style:"font-size:21px !important;"><%= project.description %></td>
        <td><%= "#{project.one}&nbsp;&nbsp;&nbsp;&nbsp;#{project.two}".html_safe %></td>
        <div class="button-group",role="group" aria-label="Basic example">
          <td><%= link_to 'Show', project,style:"color:white;", type: "button" ,class:"btn btn-primary"%></td>
          <% if user_signed_in? %>
          <td><%= link_to 'Edit', edit_project_path(project),type: "button",style:"color:white;" ,class:"btn btn-primary" %></td>
          <td><%= link_to 'Destroy',project, method: :delete, data: { confirm: 'Are you sure?' }, style:"color:white;",type: "button" ,class:"btn btn-primary" %></td>
        <% end %> 
        </div>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<div style="text-align: center;">
<%= link_to 'New Project', new_project_path, style:"color:white;",class:"btn btn-primary" %>
</div>
</div>